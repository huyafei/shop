/**index.wxss**/
page{
  height: 100%;
}
.search{
  align-items: center;
  height: 100rpx;
  background-color: #fff;
}
.address-name{
  width: 180rpx;
  text-align: center;
}
.search-container{
  width: calc(100% - 180rpx);
  padding: 0 30rpx;
}
.search-content{
  align-items: center;
  border-radius: 30rpx;
  background-color:#f4f4f4;
  height: 60rpx;
  line-height: 60rpx;
}
.icon-search{
  margin: 0 20rpx;
}
.search-content>input{
  width: 100%;
  height: 60rpx;
}

/* 轮播 */
.swiper-container swiper,.swiper-container .slide-image{
  height: 280rpx;
  width: 100%;
}
/* 业务 */
.common-bus{
   display: -webkit-flex; /* Safari */
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   padding: 35rpx 20rpx 30rpx 20rpx;
   background-color: #fff;
   margin-bottom: 20rpx;
 }
 .common-bus>.common-item{
   text-align: center;
   width: 25%;
   font-size: 28rpx;
   
 }
 .common-bus>.common-item image{
  width:100rpx;
  height: 100rpx; 
}
/* 附近商家 */
.nearby-store .bus-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
   background-color: #ffffff;
 
}   
.nearby-store .bus-title-lf>image{
  width: 8rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.nearby-store .bus-title-lf>text{
  font-weight:bold; 
  vertical-align: middle;
}
/* 商店列表 */
.store-container{
  /* padding:0 30rpx; */
}
.item-store-content{
  padding: 20rpx 30rpx 0 30rpx;
   border-radius: 30rpx;
}
 .item-store-content image{
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx; 
  height: 390rpx;
}
.item-store-content-t{
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx; 
}
.item-store-content-t .store-data{
  align-items: center;
}
.store-data .origin-price{
  margin-right:20rpx; 
}
.origin-price .price,.rent-quantity .quantity{
  color:#ff567a ;
}

.item-store-content-t>view{
  align-items: center;
  padding: 0 20rpx;
  height: 46rpx;
  line-height: 46rpx;
}