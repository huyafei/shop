/*  清除浮动方法二*/
.clear:after {
   content:' ';
   display:table;
   clear: both;
 }
.pointer{
  cursor:pointer;
}
.flex-r{
  display:flex;
  flex-direction:row;
}
.flex-c{
  display:flex;
  flex-direction:column;
}
.multi-omit{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.single-omit{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
